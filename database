import sqlite3

def init_db():
    conn = sqlite3.connect('network.db')
    c = conn.cursor()
    c.execute('''
        CREATE TABLE IF NOT EXISTS traffic (
            id INTEGER PRIMARY KEY,
            source TEXT,
            destination TEXT,
            protocol TEXT,
            length INTEGER,
            info TEXT
        )
    ''')
    conn.commit()
    conn.close()

def insert_packet(packet):
    conn = sqlite3.connect('network.db')
    c = conn.cursor()
    c.execute('''
        INSERT INTO traffic (source, destination, protocol, length, info)
        VALUES (?, ?, ?, ?, ?)
    ''', (packet['source'], packet['destination'], packet['protocol'], packet['length'], packet['info']))
    conn.commit()
    conn.close()
